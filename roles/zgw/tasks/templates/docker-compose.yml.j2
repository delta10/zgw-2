version: '2'
services:
    nginx:
        image: nginx
        restart: always
        ports:
        - "80:80"
        - "443:443"
        volumes:
        - "/opt/zgw/nginx-default.conf:/etc/nginx/conf.d/default.conf"
        - "drc-media:/private-media"
        networks:
            zgw:
                aliases:
                - gemma-zrc.${HOST_SUFFIX}
                - gemma-ztc.${HOST_SUFFIX}
                - gemma-drc.${HOST_SUFFIX}
                - gemma-brc.${HOST_SUFFIX}
                - gemma-nrc.${HOST_SUFFIX}
                - gemma-ac.${HOST_SUFFIX}
                - gemma-zaken-demo.${HOST_SUFFIX}
    postgis:
        image: mdillon/postgis:10
        restart: always
        environment:
        - "POSTGRES_PASSWORD=${POSTGIS_PASSWORD}"
        volumes:
        - "postgis:/var/lib/postgresql/data"
        - "/opt/zgw/postgis-initdb.sql:/docker-entrypoint-initdb.d/initdb.sql"
        networks:
        - zgw
    redis:
        image: redis:5-alpine
        networks:
        - zgw
    rabbitmq:
        image: rabbitmq:3.7-alpine
        environment:
        - "RABBITMQ_DEFAULT_PASS=${RABBITMQ_PASSWORD}"
        networks:
        - zgw
    gemma-zrc:
        image: vngr/gemma-zrc:${GEMMA_VERSION}
        restart: always
        environment:
        - "DJANGO_SETTINGS_MODULE=zrc.conf.docker"
        - "SECRET_KEY=${SECRET_KEY}"
        - "DB_HOST=postgis"
        - "DB_USER=postgres"
        - "DB_PASSWORD=${POSTGIS_PASSWORD}"
        - "DB_NAME=gemma-zrc"
        - "IS_HTTPS=0"
        depends_on:
        - postgis
        networks:
        - zgw
    gemma-ztc:
        image: vngr/gemma-ztc:${GEMMA_VERSION}
        restart: always
        environment:
        - "DJANGO_SETTINGS_MODULE=ztc.conf.docker"
        - "SECRET_KEY=${SECRET_KEY}"
        - "DB_HOST=postgis"
        - "DB_USER=postgres"
        - "DB_PASSWORD=${POSTGIS_PASSWORD}"
        - "DB_NAME=gemma-ztc"
        - "IS_HTTPS=0"
        depends_on:
        - postgis
        networks:
        - zgw
    gemma-drc:
        image: vngr/gemma-drc:${GEMMA_VERSION}
        restart: always
        environment:
        - "DJANGO_SETTINGS_MODULE=drc.conf.docker"
        - "SECRET_KEY=${SECRET_KEY}"
        - "DB_HOST=postgis"
        - "DB_USER=postgres"
        - "DB_PASSWORD=${POSTGIS_PASSWORD}"
        - "DB_NAME=gemma-drc"
        - "IS_HTTPS=0"
        volumes:
        - "drc-media:/app/private-media"
        depends_on:
        - postgis
        networks:
        - zgw
    gemma-brc:
        image: vngr/gemma-brc:${GEMMA_VERSION}
        restart: always
        environment:
        - "DJANGO_SETTINGS_MODULE=brc.conf.docker"
        - "SECRET_KEY=${SECRET_KEY}"
        - "DB_HOST=postgis"
        - "DB_USER=postgres"
        - "DB_PASSWORD=${POSTGIS_PASSWORD}"
        - "DB_NAME=gemma-brc"
        - "IS_HTTPS=0"
        depends_on:
        - postgis
        networks:
        - zgw
    gemma-nrc:
        image: vngr/gemma-notifications:${GEMMA_VERSION}
        restart: always
        environment:
        - "DJANGO_SETTINGS_MODULE=nrc.conf.docker"
        - "SECRET_KEY=${SECRET_KEY}"
        - "DB_HOST=postgis"
        - "DB_USER=postgres"
        - "DB_PASSWORD=${POSTGIS_PASSWORD}"
        - "DB_NAME=gemma-nrc"
        - "IS_HTTPS=0"
        - "PUBLISH_BROKER_URL=amqp://guest:${RABBITMQ_PASSWORD}@rabbitmq:5672//"
        - "CELERY_BROKER_URL=amqp://guest:${RABBITMQ_PASSWORD}@rabbitmq:5672//"
        - "CELERY_RESULT_BACKEND=amqp://guest:${RABBITMQ_PASSWORD}@rabbitmq:5672//"
        depends_on:
        - postgis
        - rabbitmq
        networks:
        - zgw
    gemma-nrc-worker:
        image: vngr/gemma-notifications:${GEMMA_VERSION}
        restart: always
        environment:
        - "DJANGO_SETTINGS_MODULE=nrc.conf.docker"
        - "SECRET_KEY=${SECRET_KEY}"
        - "DB_HOST=postgis"
        - "DB_USER=postgres"
        - "DB_PASSWORD=${POSTGIS_PASSWORD}"
        - "DB_NAME=gemma-nrc"
        - "IS_HTTPS=0"
        - "PUBLISH_BROKER_URL=amqp://guest:${RABBITMQ_PASSWORD}@rabbitmq:5672//"
        - "CELERY_BROKER_URL=amqp://guest:${RABBITMQ_PASSWORD}@rabbitmq:5672//"
        - "CELERY_RESULT_BACKEND=amqp://guest:${RABBITMQ_PASSWORD}@rabbitmq:5672//"
        command: celery worker --app=nrc -l info --workdir=src
        depends_on:
        - postgis
        - rabbitmq
        networks:
        - zgw
    gemma-ac:
        image: vngr/gemma-autorisatiecomponent:${GEMMA_VERSION}
        restart: always
        environment:
        - "DJANGO_SETTINGS_MODULE=ac.conf.docker"
        - "SECRET_KEY=${SECRET_KEY}"
        - "DB_HOST=postgis"
        - "DB_USER=postgres"
        - "DB_PASSWORD=${POSTGIS_PASSWORD}"
        - "DB_NAME=gemma-ac"
        - "IS_HTTPS=0"
        depends_on:
        - postgis
        networks:
        - zgw
    gemma-zaken-demo:
        image: vngr/gemma-zaken-demo
        restart: always
        environment:
        - "DJANGO_SETTINGS_MODULE=zac.conf.docker"
        - "SECRET_KEY=${SECRET_KEY}"
        - "DB_HOST=postgis"
        - "DB_USER=postgres"
        - "DB_PASSWORD=${POSTGIS_PASSWORD}"
        - "DB_NAME=gemma-zaken-demo"
        - "REDIS_HOST=redis"
        - "IS_HTTPS=0"
        - "DEBUG=True"
        depends_on:
        - postgis
        - redis
        networks:
        - zgw

volumes:
    postgis:
    drc-media:

networks:
    zgw:
